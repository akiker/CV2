        <div class="container">
            <div class="navbar-text">
                <p style="vertical-align:middle;">&copy; @DateTime.Now.Year - Wells Fargo Advisors</p>
            </div>
        </div>
    </div>*@

    @*@Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
</body>
</html>
