            @Html.DisplayFor(modelItem => item.ElevatedRightsRequired)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresAdminRightsBasic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresAdminRightsAdvanced)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresAdminRightsUpdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LaVerified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorksWithLa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoesNotWorkWithLa)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
