@model IEnumerable<CodeVault.Models.ViewModels.PermissionViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ElevatedRightsRequired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiresAdminRightsBasic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiresAdminRightsAdvanced)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiresAdminRightsUpdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LaVerified)
